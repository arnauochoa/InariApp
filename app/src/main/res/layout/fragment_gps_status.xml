<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.status.GPSStatusFragment"
        android:background="@color/colorLightGrayBackground">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                    android:id="@+id/skyplotCardGPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/skyplot"
                            android:layout_width="wrap_content"
                            android:layout_height="350dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="@dimen/default_gap"
                            android:src="@drawable/skyplot"/>
                    <TextView
                            android:id="@+id/cn0StripTitleGPS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/skyplot"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/CN0_strip_title"
                            android:textStyle="bold"/>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintTop_toBottomOf="@id/cn0StripTitleGPS"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:src="@drawable/grade"/>

                </android.support.constraint.ConstraintLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/skyplotCardGPS"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/default_gap">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp">

                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/firstColumn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                                android:id="@+id/numSatsTitleGPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/num_sats_title"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/numSatsContentGPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/numSatsTitleGPS"
                                android:layout_marginStart="@dimen/default_gap"
                                android:text="18"/>

                        <TextView
                                android:id="@+id/pdopTitleGPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_gap"
                                app:layout_constraintTop_toBottomOf="@id/numSatsTitleGPS"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/pdop_title"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/pdopContentGPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/pdopTitleGPS"
                                app:layout_constraintStart_toEndOf="@id/pdopTitleGPS"
                                android:layout_marginStart="@dimen/default_gap"
                                android:text="3"/>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/secondColumn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/firstColumn">

                        <TextView
                                android:id="@+id/cn0TitleGPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/cn0_title"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/cn0ContentGPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/cn0TitleGPS"
                                android:layout_marginStart="@dimen/default_gap"
                                android:text="31 dB-Hz"/>

                        <TextView
                                android:id="@+id/hvdopTitleGPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_gap"
                                app:layout_constraintTop_toBottomOf="@id/cn0TitleGPS"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/hvdop_title"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/hvdopContentGPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/hvdopTitleGPS"
                                app:layout_constraintStart_toEndOf="@id/hvdopTitleGPS"
                                android:layout_marginStart="@dimen/default_gap"
                                android:text="1.4/1.9"/>

                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>