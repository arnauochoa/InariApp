<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sky_signal_legend"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:clipChildren="false">

    <!-- Colored C/N0 legend -->
    <ImageView
            android:id="@+id/sky_legend_cn0"
            android:layout_width="@dimen/cno_meter_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/cno_indicator"
            android:layout_centerHorizontal="true"
            android:background="@color/cn0_meter_border"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/signal_gradient" />

    <ImageView
            android:id="@+id/cno_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/sky_legend_cn0"
            android:layout_alignStart="@id/sky_legend_cn0"
            android:layout_below="@id/cn0_text_in_view"
            android:layout_marginLeft="@dimen/cno_indicator_min_left_margin"
            android:layout_marginStart="@dimen/cno_indicator_min_left_margin"
            android:layout_marginBottom="-3dp"
            android:tint="@color/red"
            app:srcCompat="@drawable/ic_cn0_indicator"
            android:visibility="invisible"/>

    <include
            android:id="@+id/cn0_text_in_view"
            layout="@layout/view_cno_text_view"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="-7dp"
            android:layout_marginLeft="@dimen/cno_textview_min_left_margin"
            android:layout_marginStart="@dimen/cno_textview_min_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

